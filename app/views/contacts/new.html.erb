<div class="container">
  <div class="row">
    <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %>"><%= message %></div>
    <% end %>
    <h3 class="text-center">Contact Us</h3>
    <div class="col-md-4 col-md-offset-4">
      <div class="well">
        <%= form_for @contact do |f| %>
          <div class="form-group">
            <%= f.label :name %>
            <% @contact.errors.messages[:name].empty? ? b_class = "form-control": b_class = "form-control erorr" %>
            <%= f.text_field :name, class: b_class, placeholder: 'Enter your name' %>
          </div>
          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, class: 'form-control', placeholder: 'Enter email' %>
            
          </div>
          <div class="form-group">
            <%= f.label :comments %>
            <%= f.text_area :comments, class: 'form-control', placeholder: 'Enter your message', rows: '5' %>
          </div>
          <%= f.submit 'Submit', class: 'btn btn-info btn-block' %>
          <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        <% end %>
        <%= @contact.errors.messages[:name].empty? %>

      </div>
    </div>
  </div>
</div>
